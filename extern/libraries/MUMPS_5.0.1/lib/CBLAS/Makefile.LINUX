#-----------------------------------------------------------------------------
 
BLLIB = /usr/lib64/libblas.a

CBLIB = ../lib/cblas_$(PLAT).a 

CBDIR = /data/warehouse14/rmuenste/code/mumps_test/MUMPS_5.0.1-cmake/lib/CBLAS

